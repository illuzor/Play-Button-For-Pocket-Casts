{
  "manifest_version": 2,
  "name": "Play/Pause Button For Pocket Casts",
  "short_name": "Play Button",
  "description": "Simple play/pause button for Pocket Casts. This button allows to pause or resume current podcasts independently of current tab.",
  "version": "2.0",
  "author": "Artem Zanin",
  "icons": {
    "16": "images/play.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage",
    "tabs",
    "https://playbeta.pocketcasts.com/*/"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://playbeta.pocketcasts.com/*/"
      ],
      "js": [
        "action-play.js",
        "action-skip.js",
		"log-listener.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Play",
    "default_icon": "images/play.png"
  },
  "commands": {
    "play-pause": {
      "suggested_key": {
        "default": "MediaPlayPause"
      },
      "description": "Play/Pause",
      "global": true
    },
    "jump-back": {
      "suggested_key": {
        "default": "MediaPrevTrack"
      },
      "description": "Jump back",
      "global": true
    },
    "jump-forward": {
      "suggested_key": {
        "default": "MediaNextTrack"
      },
      "description": "Jump forward",
      "global": true
    }
  }
}